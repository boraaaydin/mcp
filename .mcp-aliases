# Claude Code MCP Aliases
# Automatically load .env variables when running Claude with MCP configs

alias claude-mcp='set -a && source .env && set +a && claude'
alias claude-ref='set -a && source .env && set +a && claude --mcp-config ref.json'
alias claude-context7='set -a && source .env && set +a && claude --mcp-config context7.json'
alias claude-playwright='set -a && source .env && set +a && claude --mcp-config playwright.json'
alias claude-sthink='set -a && source .env && set +a && claude --mcp-config sequential-thinking.json'
alias claude-github='set -a && source .env && set +a && claude --mcp-config github.json'
alias claude-supabase='set -a && source .env && set +a && claude --mcp-config supabase.json'
alias claude-browsermcp='set -a && source .env && set +a && claude --mcp-config browsermcp.json'
alias claude-vercel='set -a && source .env && set +a && claude --mcp-config vercel.json'
alias claude-apify='set -a && source .env && set +a && claude --mcp-config apify.json'