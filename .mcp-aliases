# Claude Code MCP Aliases
# Automatically load .env variables when running Claude with MCP configs

alias claude-mcp='set -a && source .env && set +a && claude'
alias claude-all='set -a && source .env && set +a && claude --mcp-config ~/mcp/server/ref.json --mcp-config ~/mcp/server/context7.json --mcp-config ~/mcp/server/playwright.json --mcp-config ~/mcp/server/sequential-thinking.json --mcp-config ~/mcp/server/github.json --mcp-config ~/mcp/server/supabase.json --mcp-config ~/mcp/server/browsermcp.json --mcp-config ~/mcp/server/vercel.json --mcp-config ~/mcp/server/apify.json'
alias claude-ref='set -a && source .env && set +a && claude --mcp-config ~/mcp/server/ref.json'
alias claude-context7='set -a && source .env && set +a && claude --mcp-config ~/mcp/server/context7.json'
alias claude-playwright='set -a && source .env && set +a && claude --mcp-config ~/mcp/server/playwright.json'
alias claude-sthink='set -a && source .env && set +a && claude --mcp-config ~/mcp/server/sequential-thinking.json'
alias claude-github='set -a && source .env && set +a && claude --mcp-config ~/mcp/server/github.json'
alias claude-supabase='set -a && source .env && set +a && claude --mcp-config ~/mcp/server/supabase.json'
alias claude-browsermcp='set -a && source .env && set +a && claude --mcp-config ~/mcp/server/browsermcp.json'
alias claude-vercel='set -a && source .env && set +a && claude --mcp-config ~/mcp/server/vercel.json'
alias claude-apify='set -a && source .env && set +a && claude --mcp-config ~/mcp/server/apify.json'